{
  "name": "@baloise/ds-tokens",
  "version": "19.8.3",
  "description": "The Baloise Design-System is an open source project for styling awesome web applications that follow the Baloise corporate styling guidelines.",
  "repository": {
    "type": "git",
    "url": "https://github.com/baloise/design-system.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "scripts": {
    "build": "npm run build:clean && npm run build:ts && npm run build:tokens",
    "build:clean": "rimraf dist",
    "build:ts": "tsc -p tsconfig.lib.json",
    "build:tokens": "style-dictionary build --config ./dist/out-tsc/config.js --verbose"
  },
  "homepage": "https://design.baloise.dev",
  "license": "Apache-2.0",
  "files": [
    "dist/"
  ],
  "main": "dist/tokens.js",
  "module": "dist/tokens.js",
  "types": "dist/tokens.d.ts",
  "style": "dist/tokens.css"
}
