{
  "name": "core",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/core/src",
  "projectType": "library",
  "targets": {
    "start": {
      "executor": "nx:run-commands",
      "dependsOn": ["^build"],
      "options": {
        "cwd": "{projectRoot}",
        "command": "stencil build --dev --serve --watch --port=4000",
        "env": {
          "BAL_DEVELOPMENT": "true"
        }
      }
    },
    "e2e-ui": {
      "executor": "nx:run-commands",
      "dependsOn": ["^build"],
      "options": {
        "cwd": "{projectRoot}",
        "command": "npx playwright test --ui",
        "env": {
          "BAL_DEVELOPMENT": "true"
        }
      }
    },
    "e2e-update-screenshots": {
      "executor": "nx:run-commands",
      "dependsOn": ["^build"],
      "options": {
        "cwd": "{projectRoot}",
        "command": "npx playwright test --update-snapshots",
        "env": {
          "BAL_DEVELOPMENT": "true"
        }
      }
    },
    "ci-e2e": {
      "executor": "nx:run-commands",
      "dependsOn": ["^build"],
      "options": {
        "cwd": "{projectRoot}",
        "command": "npx playwright test",
        "env": {
          "BAL_PLAYWRIGHT_TESTING": "true"
        }
      }
    },
    "ci-e2e-update-component-screenshots": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "command": "npx playwright test --config=playwright.visual.config.ts --update-snapshots",
        "env": {
          "BAL_DEVELOPMENT": "true"
        }
      }
    },
    "e2e-report": {
      "executor": "nx:run-commands",
      "dependsOn": ["^build"],
      "options": {
        "cwd": "{projectRoot}",
        "command": "npx playwright show-report",
        "env": {
          "BAL_DEVELOPMENT": "true"
        }
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "command": "stencil build --serve --watch --port=3333",
        "env": {
          "BAL_TESTING": "true"
        }
      }
    },
    "test-ui": {
      "executor": "@baloise/ds-nx:test-ui",
      "options": {
        "projectRoot": "{projectRoot}"
      }
    },
    "build": {
      "executor": "@baloise/ds-nx:build-core",
      "outputs": [
        "{projectRoot}/.stencil",
        "{projectRoot}/components",
        "{projectRoot}/dist",
        "{projectRoot}/loader",
        "{projectRoot}/www",
        "{projectRoot}/icons"
      ],
      "options": {
        "projectRoot": "{projectRoot}"
      }
    }
  },
  "tags": ["scope:release", "scope:docs", "scope:visual", "type:package"]
}
